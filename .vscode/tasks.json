{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "promptOnClose": false,
    "tasks": [
        {
            "taskName": "install",
            "args": ["install"]
        },
        {
            "taskName": "update",
            "args": ["update"]
        },
        {
            "taskName": "test",
            "args": ["run", "test"]
        },
        {
            "taskName": "build",
            "args": ["run", "webpack"],
            "isBuildCommand": true,
            "isWatching": true,
            "problemMatcher": "$eslint-stylish"
        },
        {
            "taskName": "production",
            "args": ["run", "webpack-production"]
        }
    ]
}
